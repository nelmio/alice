<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="nelmio_alice.data_loader"
                 alias="nelmio_alice.data_loader.psr_cache" />

        <service id="nelmio_alice.data_loader.psr_cache"
                 class="Nelmio\Alice\Loader\PsrCacheDataLoader">
            <argument type="service" id="nelmio_alice.data_loader.simple" />
            <argument type="service" id="nelmio_alice.cache_key_generator.data_sha1" />
            <argument type="service" id="cache.app" />
        </service>

        <service id="nelmio_alice.data_loader.simple"
                 class="Nelmio\Alice\Loader\SimpleDataLoader">
            <argument type="service" id="nelmio_alice.fixture_builder" />
            <argument type="service" id="nelmio_alice.generator" />
        </service>

        <service id="nelmio_alice.file_loader"
                 alias="nelmio_alice.file_loader.psr_cache" />

        <service id="nelmio_alice.file_loader.psr_cache"
                 class="Nelmio\Alice\Loader\PsrCacheFileLoader">
            <argument type="service" id="nelmio_alice.file_loader.simple" />
            <argument type="service" id="nelmio_alice.cache_key_generator.file_sha1" />
            <argument type="service" id="cache.app" />
        </service>

        <service id="nelmio_alice.file_loader.simple"
                 class="Nelmio\Alice\Loader\SimpleFileLoader">
            <argument type="service" id="nelmio_alice.file_parser" />
            <argument type="service" id="nelmio_alice.data_loader" />
        </service>

        <service id="nelmio_alice.cache_key_generator.data_sha1"
                 class="Nelmio\Alice\Loader\CacheKeyGenerator\Sha1DataCacheKeyGenerator">
            <argument type="string"/>%nelmio_alice.seed%</service>
        </service>

        <service id="nelmio_alice.cache_key_generator.file_sha1"
                 class="Nelmio\Alice\Loader\CacheKeyGenerator\Sha1FileCacheKeyGenerator">
            <argument type="service"/>nelmio_alice.file_locator</service>
            <argument type="string"/>%nelmio_alice.seed%</service>
        </service>

</container>
